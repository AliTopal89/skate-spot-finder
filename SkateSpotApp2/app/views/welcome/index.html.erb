	<h1>Skate Spot Finder</h1>
	<div id="navcontainer">
	<ul>
		<li><%=link_to "Create a Spot", spots_path %></li>
		<li><%=link_to "List of Spots", spots_path %></li>
		<li><%= link_to "Sign in", new_user_session_path %></li>
		<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
	</div>
	</ul>
	<div class= "intro">
		<%= image_tag "skateplaza.jpg", :class => "main_logo" %>
	</div>

